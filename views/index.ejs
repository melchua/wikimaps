    <i class="fas fa-bars" id="openbtn"></i>

    <div id="mySidenav" class="sidenav">
      <span id="closebtn">&times;</span>

      <a class="profileButton" href="#" style="font-size: 30px">Profile</a>
      <section class="profile">
