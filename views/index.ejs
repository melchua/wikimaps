<!-- Use any element to open the sidenav -->

    <i class="fas fa-bars" id="openbtn"></i>

    <div id="mySidenav" class="sidenav">
      <span id="closebtn">&times;</span>

      <a class="profileButton category" href="#" style="font-size: 30px">Profile</a>
